# =========================================
# Backend Environment Variables Template
# =========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# =========================================
# Admin Authentication
# =========================================
ADMIN_TOKEN=your-secret-admin-key-here

# =========================================
# Database (Postgres)
# =========================================
DATABASE_URL=postgresql+psycopg2://mfu_user:mfu_pass@db:5432/mfu_unibot

# =========================================
# ChromaDB (vector store) + Embedding
# =========================================
CHROMA_DIR=data/chroma
EMBED_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# =========================================
# RAG limits & Retrieval tuning
# =========================================
MAX_PDF_CHARS=300000
MAX_DOC_CHARS=200000
CHUNK_SIZE=600
CHUNK_OVERLAP=150
MAX_CHUNKS_PER_DOC=2000
TOP_K_RETRIEVE=10
RERANK_KEEP=4
SIM_THRESHOLD=0.32

# =========================================
# Generation tuning (Gemini)
# =========================================
MAX_NEW_TOKENS=220
TEMPERATURE=0.2
ENABLE_FOLLOWUPS=1
FOLLOWUPS_MAX_TOKENS=120

# =========================================
# Multi-Agent Router
# =========================================
ENABLE_MULTI_AGENT=1
# ROUTER_MODEL_NAME=gemini-2.0-flash

# =========================================
# Gemini API (REQUIRED)
# =========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-2.0-flash

# =========================================
# CORS Configuration (Production)
# =========================================
# Comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000
